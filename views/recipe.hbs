{{> header}}
<div class="subtitle">
    <h2 class="searchtitle">{{title}}</h2>
</div>
<div class="description"><p>{{description}}</p></div>
  <img class="resultsphoto" src='{{photo}}'>
  <p class='header'>Time:</p>
<div class="time"><p>{{time}}</p></div>
<p class='header'>Ingredients:</p>
<div class="ingredients">
    {{#each ingredients}}
        <div class="ingredient">
            <p>{{quantity}} {{description}} {{name}} </p>
        </div>
    {{/each}}
</div>
<p class="header">Intructions:</p>
<div class="instructions">
    <p>{{{escapeLine instructions}}}</p>
</div>
