{{> header}}
<div class="subtitle">
    <h2 class="searchtitle">Search Results</h2>
</div>
<div class="mainresults">
    {{#each recipes}}
        <div class="result">
            <a href="recipe/{{id}}"
                <h4>{{title}}</h4>
                {{#if meat}}(V){{/if}}
                {{#if gluten}}(GF){{/if}}
                {{#if dairy}}(DF){{/if}}
                <p>{{description}}</p>
                <img class="resultsphoto" src='{{photo}}'>
            </a>
        </div>
    {{/each}}
</div>
{{> footer}}
